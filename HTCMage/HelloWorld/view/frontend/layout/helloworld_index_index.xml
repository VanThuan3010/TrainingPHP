<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="div.sidebar.main">
            <block class="HTCMage\HelloWorld\Block\Test" name='help' template="HTCMage_HelloWorld::html/contact.phtml" ifconfig="contact/contact/enabled"/>
            <referenceContainer name="div.sidebar.additional" remove="true"/>
    </referenceContainer>
    <referenceContainer name="content">
        <block class="HTCMage\HelloWorld\Block\Test" name='showtext' template="HTCMage_HelloWorld::html/showtext.phtml" ifconfig="helloworld/general/enable"/>
    </referenceContainer>
</page>